
<h1>File.basename(Document.last.image.to_s) の編集ページ</h1>

<%= form_with(model: @document, local: true) do |f| %>
  <div class="form-group ">
  <%= f.label :content, 'テキスト'%>
  <br><%= f.text_area :content ,class: 'form-control' ,rows:"15" %>
  </div>
  <p><%= f.submit '登録',class: 'btn btn-primary' %></p>
<% end %>

<p><%= link_to '一覧に戻る', root_path ,class: 'btn btn-secondary'%></p>


