<h1>ユーザー一覧</h1>

<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
    <% if current_user == user %>
      <li class="media mt-2">
        <% if user.thumb? %>
          <%= link_to root_path(user) do%><p class="mr-2 rounded"><%= image_tag user.thumb.thumb50.url %></p><% end %>
        <% else %>
          <%= link_to root_path(user) do%><img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""><% end %>
        <% end %>
        <div class="media-body">
          <%= link_to user.name,root_path(user)%>
        </div>
      </li>
    <% else%> 
    <li class="media mt-2">
        <% if user.thumb? %>
          <%= link_to documents_ichiran_user_path(user) do%><p class="mr-2 rounded"><%= image_tag user.thumb.thumb50.url %></p><% end %>
        <% else %>
          <%= link_to documents_ichiran_user_path(user) do%><img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""><% end %>
        <% end %>
        <div class="media-body">
          <%= link_to user.name,documents_ichiran_user_path(user)%>
        </div>
      </li>
    <% end%>  
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>

