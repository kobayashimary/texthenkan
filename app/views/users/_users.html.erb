<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.thumb? %>
          <p class="mr-2 rounded"><%= image_tag user.thumb.thumb50.url %></p>
        <% else %>
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <% end %>
        <div class="media-body">
          <%=user.name%>
        </div>
        <div>
          <p><%= link_to 'View', documents_ichiran_user_path(user) %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>

